<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <item name="android:windowEnterTransition">@transition/activity_fade</item>
        <item name="android:windowExitTransition">@transition/activity_slide</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.Detail" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <item name="android:windowEnterTransition">@transition/activity_fade</item>
        <item name="android:windowExitTransition">@transition/activity_slide</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
    </style>

    <style name="MyTextAppearance" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#918F8F</item>
    </style>

    <style name="MyBigTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/littleGray</item>
    </style>
<!--    设置toolbar的menu弹出菜单样式  -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="overlapAnchor">false</item>

        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!--  歌曲列表的toolbar标题大小  -->
    <style name="Music.ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Music.ToolBar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14dp</item>
    </style>

    <!--  detailActivity的toolbar标题大小  -->
    <style name="Detail.ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 圆形图片 -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 自定义进度条 -->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorSeekBar</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">7dp</item>
        <item name="android:thumb">@drawable/ic_seek_bar</item>
    </style>
